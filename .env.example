# GitHub OAuth App credentials
# Create an OAuth App at https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# NextAuth.js secret for session encryption
# Generate with: openssl rand -base64 32
AUTH_SECRET=your_auth_secret

# NextAuth.js URL (set to your deployed URL in production)
NEXTAUTH_URL=http://localhost:3000

# Devin API Key for triage integration
# Get from Settings > API Keys in your Devin dashboard
DEVIN_API_KEY=your_devin_api_key

# GitHub Webhook Secret for verifying webhook payloads
# Generate with: openssl rand -hex 20
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Supabase credentials for triage state storage
# Get from your Supabase project settings
SUPABASE_PROJECT_URL=https://your-project.supabase.co
SUPABASE_API_KEY=your_supabase_anon_key
